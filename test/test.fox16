; Fox Assembly 16 bit
; Address denotion $HEX(16 bit only)
; constant denotion %DEC(16 bit only)

:main
NOP ; Nothing
LFM $FFFF
WTM $FFFF
SRA %1
AXY ; Add
SXY ; Sub
MXY ; Mul
DXY ; Div
EQU ; equal
LEQ ; less
JPZ test_one
:test_one
JNZ test_one
:test_two
JMP test_three
:test_three
CLR ; Clear OSR registers
BSL ; bitshift left
BSR ; Bitshift right
AND ; And
ORA ; Or
XOR ; Xor
DWR %621 ; Direct right to register
JMP debug
:halt
HLT ; HALT machine

; PPU
PPU_NOP
PPU_DRW %1
PPU_LFM $FFFF
PPU_WTV $FFFF
PPU_BRR
PPU_BLR
PPU_ORA $FFFF
PPU_XOR $FFFF
PPU_AND $FFFF
PPU_DEC
PPU_INC

; Debug extension stuff
:debug
DBG_LGC %1
DBG_LGC %2
DBG_LGC %38
DGB_MEM
DGB_MEM
DGB_INP
JMP :halt